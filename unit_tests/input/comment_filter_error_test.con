{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Testovaci uloha.", 
    mesh = {
      // This file assumes domain
      // (-a,a) \times (0,1)
      mesh_file = "siroke_2D.msh",
      sets = [
