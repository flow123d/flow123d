      balance = {
        cumulative = true
      }
    } 
  }, 
  
    output_streams = [
      {
        file = "test_20.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "transport_test_20.pvd", 
        format = {
          TYPE = "vtk", 
