{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test of boundary conditions for transport", 
    mesh = {
      mesh_file = "./input/mesh.msh"
    }, 

    primary_equation = {
      TYPE = "Steady_MH", 

      input_fields= [
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_pressure = { TYPE="FieldFormula", value="(x-0.5)*y" }
        }
      ],

      output = {
        output_stream = {
          REF = "/system/output_streams/0"
        },
        output_fields = [ "pressure_p0", "velocity_p0" ]
      },

      balance = true,

      solver = {
        TYPE = "Petsc",
        a_tol = 1e-12,
        r_tol = 1e-12
      }
    },

    secondary_equation = {
      TYPE = "SoluteTransport_DG", 
    
      input_fields= [
        { region = ".right",
          bc_conc = 1
        },
        { region = ".bottom",
          bc_conc = 2
        },
        { region = ".top",
          bc_conc = 3
        },
        { region = "domain",
          diff_m = { TYPE="FieldFormula", value="if(y>0.5,0,1e-2)" }
        }
      ],

      output_stream = {
        REF = "/system/output_streams/1"
      }, 
 
      substances = [
        "tracer"
      ], 
      time = {
        end_time = 10,
        max_dt = 0.25
      },
      balance = {
        cumulative = true
      },
      solver = { 
        REF="../../primary_equation/solver"
      }
    }
  }, 


  system = {
    output_streams = [
      {
        file = "./flow.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "./transport.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_list = [ 0, 0.25, 0.5, 1, 2, 10 ],
        name = "transport_output_stream"
      }
    ]
  }
}
