{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test8 - Steady flow with sources", 
    mesh = {
      mesh_file = "${INPUT}/test08.msh"
    }, 

    primary_equation = {
      TYPE = "Steady_MH", 

      input_fields= [
        { region = "plane",
          anisotropy = 1,
          water_source_density = {
            TYPE = "FieldFormula",
            value = "2*(1-x^2)+2*(1-y^2)"
          }
        },
        { region = ".plane_boundary",
          storativity="1.0",
          bc_type = "dirichlet",
          bc_pressure = 0
        } 
      ],
      
      balance = true,

      output = {
        output_stream = {
          REF = "/system/output_stream"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 
      solver = {
        TYPE = "Petsc", 
        r_tol = 1.0e-10,
        a_tol = 1.0e-10
      }
    } 
  }, 

  system = {
    output_stream =
      {
        file = "./flow.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      } 
  } 
}
