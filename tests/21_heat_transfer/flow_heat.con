{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "heat_transfer", 
    mesh = {
      mesh_file = "./input/test21.msh",
      sets = [
        { name = ".bottom",
          region_labels = [ ".fracture_bottom", ".rock_bottom" ]
        },
        { name = ".top",
          region_labels = [ ".fracture_top", ".rock_top" ]
        }
      ]
    }, 

    primary_equation = {
      TYPE = "Steady_MH",

      input_fields= [
        { region = "rock",
          conductivity = 1e-2,
          cross_section = 1
          
        },
        { region = "fracture",
          conductivity = 1,
          cross_section = 1e-2
        },
        {
          r_set = ".bottom",
          bc_type = "dirichlet",
          bc_pressure = 1
        },
        {
          r_set = ".top",
          bc_type = "dirichlet",
          bc_pressure = 0
          }
      ], 

       output = {
        output_stream = { REF = "/system/output_streams/0" }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = true,

      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-7
      }
    },
    secondary_equation = {
      TYPE = "HeatTransfer_DG", 

      balance = {
        cumulative = true
      },
      input_fields= [
        {
          r_set = ".bottom",
          bc_type = "dirichlet",
          bc_temperature = 1
        },
        { r_set="ALL",
          fluid_density = 1e3,
          fluid_heat_capacity = 5,
          fluid_heat_conductivity = 1,
          solid_density = 3e3,
          solid_heat_capacity = 1,
          solid_heat_conductivity = 3
        },
        {
          region = "rock",
          porosity = 1e-3
        },
        {
         region = "fracture",
          porosity = 1
        }
      ],
      
      output_stream = {
        REF = "/system/output_streams/1"
      }, 
      
      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-7
      },  
      time = {
        end_time = 10
      }
    }
  },    

  system = {
    output_streams =[
     {        
        file = "flow.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "./heat.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        },  
        time_step = 1,
        name = "transport_output_stream"
      }
    ] 
  }  
}