{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test3 - Transport implicit 1D-2D, (convection, dispersion)", 
    mesh = {
      mesh_file = "./input/test3.msh"
    }, 

    primary_equation = {
      TYPE = "SteadyDarcy_MH", 

      input_fields= [
        { rid = 17,
          anisotropy = 10,
          cross_section = 1,
          sigma = 0.05
        },
        { rid = 18,
          anisotropy = 1,
          cross_section = 1
        },
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_pressure = { TYPE="FieldFormula", value = "x+y" }
        }
      ],

      output = {
        output_stream = {
          REF = "/system/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = true,

      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-12,
        r_tol = 1e-12
      }
    }, 

    secondary_equation = {
      TYPE = "Transport_OS", 

      substances = [
        "age"
      ], 
      
      transport = {
        TYPE="ConvectionDiffusion_DG",
        
        input_fields= [
          { rid = 17,
            init_conc = 0,
            porosity= 0.25
          },
          { rid = 18,
            init_conc = 0,
            porosity= 0.25
          },
          { r_set = "BOUNDARY",
            bc_conc = 1
          }
        ],
        
        solver = {
          TYPE = "Petsc", 
          a_tol = 1e-12,
          r_tol = 1e-12
        }
      },

      output_stream = {
        REF = "/system/output_streams/1"
      }, 
      
      time = {
        end_time = 1.0, 
        init_dt = 0.1
      },
      
      balance = {
        cumulative = true
      }
    }
  }, 

  system = {
    output_streams = [
      {
        file = "flow.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "transport.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.1,
        name = "transport_output_stream"
      }
    ]
  }
}