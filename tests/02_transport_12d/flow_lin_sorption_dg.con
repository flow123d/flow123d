{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test2 - Transport 1D-2D (convection, dual porosity, sorption)", 
    mesh = {
      mesh_file = "./input/test2.msh",
      sets = [
          {
            name = "subset",
            region_ids = [
                48,
                184
            ]
          }
        ]
    }, 

    primary_equation = {
      TYPE = "Steady_MH", 

      input_fields= [
        { rid = 48,
          anisotropy = 10,
          sigma = 0.05,
          cross_section = { TYPE="FieldFormula", value="0.1+x/10" }
        },
        { rid = 184,
          anisotropy = 1,
          cross_section = 1
        },
        { region = "IMPLICIT BOUNDARY",
          flow_old_bcd_file = "./input/test2.fbc"
        }
      ],

      balance = true,

      output = {
        output_stream = {
          REF = "/system/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0", "region_id" ]
      }, 
      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-12,
        r_tol = 1e-12
      }
    },

    secondary_equation = {
      TYPE = "SoluteTransport_DG", 

      input_fields=[
        { 
          r_set="BOUNDARY",
          bc_conc = 1
        },
        {
          r_set="subset",
          init_conc = 0,
          porosity= 0.25
        },
        { rid = 184
          rock_density = 2700,
          sorption_mult = [0.2,0]
        },
        { 
          r_set="BOUNDARY",
          time = 5
          bc_conc = 0
        }
      ],
      
      dg_order=1,
      
      solvent_density = 1000,

      output_stream = {
        REF = "/system/output_streams/1"
      },
      
      output_fields=["conc", "region_id"],

      substances = [
        { name = "A", molar_mass = 2 },
        { name = "B", molar_mass = 0.5 }
      ], 
      time = {
        end_time = 10
      },
      balance = {
        file = "mass_balance_dg.txt"
        cumulative = true
      },
      
      solver = {
        TYPE="Petsc"
      }
    }
  }, 

  system = {
    output_streams = [
      {
        file = "./test2.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "./transport_dg.pvd", 
        format = {
          TYPE = {
            REF = "/system/output_streams/0/format/TYPE"
          }, 
          variant = "ascii"
        }, 
        time_step = 1,
        name = "transport_output_stream"
      }
    ]
  }
