{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Simple dual porosity test - steady flow, simple transport",
    mesh = {
      mesh_file = "input/dual_por.msh"
    }, 
    
    primary_equation = {
      TYPE = "Steady_MH",
      
      input_fields= [
        { r_set = "ALL", 
          conductivity = 1e-15
        },
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_pressure = 0
        }
      ],
       
      output = {
        output_stream = {
          REF = "/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = true,

      solver = { 
        TYPE = "Petsc",
        a_tol = 1e-7 
      }
    }, 
    
    secondary_equation = {
      TYPE = "TransportOperatorSplitting",
 
      input_fields= [
        { r_set = "ALL",
          init_conc = [1.0, 1.0],
          porosity= 0.25 
        },
        { r_set = "BOUNDARY",
          bc_conc = 0
        }
      ],
      
      substances = [
        "A",
        "B"
        ],
      
      output_stream = {
        REF = "/output_streams/1"
      }, 
      time = {
        end_time = 5.0
      },
      
      reaction_term = {
        TYPE = "DualPorosity",
        
        input_fields= [
          {
            r_set="ALL",
            diffusion_rate_immobile= {
              TYPE="FieldFormula", 
              value = ["if(t>0.5,0.3,0.0)", //A is delayed by 0.5
                       "1.0"]  
              },
            porosity_immobile = {
              TYPE = "FieldFormula",
              value = "if(t>1.0,0.5,0.25)"} //change porosity
            ,
            init_conc_immobile = [0.0, 0.0]
          }
        ],
        output_fields = ["conc_immobile", "porosity_immobile"]
      },
      balance = {
        cumulative = true
      }
    } 
  }, 
  
    output_streams = [
      {
        file = "dual_por.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "dual_por_transport.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.5,
        name = "transport_output_stream"
      }
    ]
 

}