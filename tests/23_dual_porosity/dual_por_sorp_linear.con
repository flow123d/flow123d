{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Simple dual porosity test - steady flow, simple transport",
    mesh = {
      mesh_file = "input/dual_por.msh"
    }, 
    
    primary_equation = {
      TYPE = "SteadyDarcy_MH",
      
      input_fields= [
        { r_set = "ALL", 
          conductivity = 1e-15
        },
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_pressure = 0
        }
      ],
       
      output = {
        output_stream = {
          REF = "/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = true,

      solver = { 
        TYPE = "Petsc",
        a_tol = 1e-7 
      }
    }, 
    
    secondary_equation = {
      TYPE = "Transport_OS",

      transport = {
        TYPE = "Convection_FV",
        input_fields= [
          { r_set = "ALL",
            init_conc = [1.0,0.0],
            porosity= 0.25 
          },
          { r_set = "BOUNDARY",
            bc_conc = 0
          }
        ]
      },
      
      substances = [
        "A",
        "B"
        ],
      
      output_stream = {
        REF = "/output_streams/1"
      }, 
      time = {
        end_time = 5.0
      },
      
      reaction_term = {
        TYPE = "DualPorosity",
        
        input_fields= [
          {
            r_set="ALL",
            diffusion_rate_immobile= [0.01,0.01],
            porosity_immobile= 0.25,
            init_conc_immobile = [0.0, 0.0]
          }
        ],
        scheme_tolerance = 0.0,
        
        reaction_mobile = {
          TYPE = "SorptionMobile",
          solvent_density= 1.0,
          substances = ["A", "B"],
          solubility = [1.0, 1.0],
          input_fields= [
            {
              r_set="ALL",
              rock_density = 1.0,
              sorption_type=  "linear",
              isotherm_mult= 0.6, 
              isotherm_other= 0.4
            }
          ],
          
          reaction_liquid = {
            TYPE="FirstOrderReaction",
            reactions = [
              {
                reactants = "A",
                reaction_rate = 0.277258872,
                products = "B"
              }
            ]
          }
        },
        
        reaction_immobile = {
          TYPE = "SorptionImmobile",
          solvent_density = 1.0,
          substances = { REF = "/problem/secondary_equation/reaction_term/reaction_mobile/substances" },
          solubility = { REF = "/problem/secondary_equation/reaction_term/reaction_mobile/solubility" },
          input_fields= { REF = "/problem/secondary_equation/reaction_term/reaction_mobile/input_fields" },
          reaction_liquid = { REF = "/problem/secondary_equation/reaction_term/reaction_mobile/reaction_liquid" }
        }
      },
      balance = {
        cumulative = true
      }
    } 
  }, 
  
    output_streams = [
      {
        file = "dual_por.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "dual_por_transport.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.5,
        name = "transport_output_stream"
      }
    ]
 

}