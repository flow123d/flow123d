{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Simple dual porosity test - steady flow, simple transport",
    mesh = {
      mesh_file = "input/dual_por.msh"
    }, 
    
    primary_equation = {
      TYPE = "Steady_MH",
      
      input_fields= [
        { r_set = "ALL", 
          conductivity = 1e-15
        },
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_pressure = 0
        }
      ],
       
      output = {
        output_stream = {
          REF = "/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      solver = { 
        TYPE = "Petsc",
        a_tol = 1e-7 
      }
    }, 
    
    secondary_equation = {
      TYPE = "TransportOperatorSplitting",
 
      input_fields= [
        { r_set = "ALL",
          init_conc = [1.0,0.0],
          porosity= 0.25 
        },
        { r_set = "BOUNDARY",
          bc_conc = 0
        }
      ],
      
      substances = [
        "A",
        "B"
        ],
      
      output_stream = {
        REF = "/output_streams/1"
      }, 
      time = {
        end_time = 5.0
      },
      
      reaction_term = {
        TYPE = "DualPorosity",
        
        input_fields= [
          {
            r_set="ALL",
            diffusion_rate_immobile= [0.01,0.01],
            porosity_immobile= 0.25,
            init_conc_immobile = [0.0, 0.0]
          }
        ],
        
        scheme_tolerance = 0.0,
        
        reaction_mobile = {
          TYPE="LinearReactions",
          decays = [
            {
              parent = "A",
              half_life = 2.5,
              products = [ "B" ]
            }
          ]
        },
        
        reaction_immobile = {
          REF = "/problem/secondary_equation/reaction_term/reaction_mobile"
        }
      }
          
    } 
  }, 
  
    output_streams = [
      {
        file = "dual_por.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "dual_por_transport.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.5,
        name = "transport_output_stream"
      }
    ]
 

}