{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test12 - radioactive decay simulation, long decay chain with biffurcation", 
    mesh = {
      mesh_file = "./input/sit_decay.msh"
    }, 
    
    primary_equation = {
      TYPE = "SteadyDarcy_MH", 

      input_fields= [
        { rid = 1,
          anisotropy = 0.01
        },
        {
          r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_piezo_head = 0
        }
      ],

      output = {
        output_stream = {
          REF = "/system/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = true,

      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-07
      }
    }, 
    
    secondary_equation = {
      TYPE = "Transport_OS", 

      transport = {
        TYPE = "Convection_FV",
        input_fields= [
          { rid = 1,
            init_conc = 
              [0.01000000, 0.02000000, 0.03000000, 0.04000000, 0.05000000, 0.06000000]
          },
          {
            r_set = "BOUNDARY",
            bc_conc = [0.01000000, 0.02000000, 0.03000000, 0.04000000, 0.05000000, 0.06000000]
          }
        ]
      },

      output_stream = {
        REF = "/system/output_streams/1"
      }, 

      substances = [
        "A", 
        "B", 
        "C", 
        "D", 
        "E", 
        "F"
      ], 
      time = {
        end_time = 10.0
      },
      
      reaction_term = {
        TYPE="FirstOrderReaction",

        reactions = [
          {
            reactants = "D",
            reaction_rate = 0.277258872,
            products = "E"
          }
        ]
      },

      balance = {
        cumulative = true
      }

    }
  },
  
  system = {
    output_streams = [
      {
        file = "./lin_react.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }, 
      {
        file = "./transport_lin_react.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.5,
        name = "transport_output_stream"
      }
    ]
  }
}