/** 
 * Should give same results as flow_vtk.con, but BC condition is given as piezo head.
 */
{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test1 - Steady flow with multidimensional connections 1D-2D-3D", 
    mesh = {
      mesh_file = "./input/test1_new.msh",
      sets=[
         {name="all_2d", labels=[ "2d_fracture_1", "2d_fracture_2" ]}
        ]
    }, 

    primary_equation = {
      TYPE = "Steady_MH", 
      n_schurs = 2, 

      bulk_data = [
        { region = "1d_channel",
          anisotropy = 10
        },
        { r_set = "all_2d",
          anisotropy = 1
        },
        { region = "3d_cube",
          anisotropy = 0.1
        }
      ],
      
      bc_data = [
        { r_set = "BOUNDARY",
          bc_type = "dirichlet",
          bc_piezo_head = {
            TYPE = "FieldFormula",
            value = "x"
          }
        }
      ],

      output = {
        balance_output = "water_balance.out", 
        output_stream = {
          REF = "/system/output_stream"
        }, 
        piezo_head_p0 = "flow_output_stream", 
        pressure_p0 = "flow_output_stream", 
        pressure_p1 = "flow_output_stream", 
        velocity_p0 = "flow_output_stream"
      }, 
      solver = {
        TYPE = "Petsc", 
        r_tol = 1.0e-10,
        a_tol = 1.0e-10
      } 
    }
  }, 

  system = {
    output_stream = {
        file = "./test1.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        name = "flow_output_stream"
      }
  }
}
